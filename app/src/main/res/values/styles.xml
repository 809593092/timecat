        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
