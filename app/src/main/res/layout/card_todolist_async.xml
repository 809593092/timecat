<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius">
    <!--app:cardElevation="@dimen/card_elevation"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedule_task_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="content"/>

        <LinearLayout
            android:id="@+id/schedule_task_ll_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dialog_add_task_footer"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.rey.material.widget.TextView
                android:id="@+id/schedule_task_tv_label"
                style="Material.Drawable.Ripple.Touch.Light"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:background="#50f44336"
                android:gravity="center"
                android:padding="5dp"
                android:text="重要且紧急"
                android:textColor="@color/red"
                android:textSize="10dp"
                app:rd_enable="true"/>

            <com.rey.material.widget.TextView
                android:id="@+id/schedule_task_tv_date"
                style="Material.Drawable.Ripple.Touch.Light"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/margin_auto"
                android:background="#502196f3"
                android:gravity="center"
                android:padding="5dp"
                android:text="02.07"
                android:textColor="@color/blue"
                android:textSize="10dp"
                app:rd_enable="true"/>

            <com.rey.material.widget.TextView
                android:id="@+id/schedule_task_tv_time"
                style="Material.Drawable.Ripple.Touch.Light"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/margin_auto"
                android:background="#502196f3"
                android:gravity="center"
                android:padding="5dp"
                android:text="全天"
                android:textColor="@color/blue"
                android:textSize="10dp"
                app:rd_enable="true"/>

            <com.rey.material.widget.TextView
                android:id="@+id/schedule_task_tv_tag"
                style="Material.Drawable.Ripple.Touch.Light"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/margin_auto"
                android:background="#50ff9800"
                android:gravity="center"
                android:padding="5dp"
                android:text="标签"
                android:textColor="@color/orange"
                android:textSize="10dp"
                app:rd_enable="true"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>