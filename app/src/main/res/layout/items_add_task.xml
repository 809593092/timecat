<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/add_task_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_task_ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_double"
        android:layout_marginStart="@dimen/margin_double"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_task_iv_cancel"
            android:layout_width="@dimen/height_normal"
            android:layout_height="@dimen/height_normal"
            android:layout_weight="1"
            android:contentDescription="@string/translate"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_close"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/add_task_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_normal"
            android:layout_weight="8"
            android:gravity="center_vertical|left"
            android:text="添加任务"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_task_iv"
            android:layout_width="@dimen/height_normal"
            android:layout_height="@dimen/height_normal"
            android:layout_weight="1"
            android:contentDescription="@string/translate"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_compare_arrows_white_36dp"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/add_task_et_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/add_task_ll_header"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:hint="任务名称"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"/>

    <LinearLayout
        android:id="@+id/add_task_ll_break"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/add_task_et_title"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:background="#72727255"
        android:orientation="horizontal"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/add_task_et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"

        android:layout_below="@id/add_task_ll_break"
        android:layout_marginBottom="@dimen/margin_double"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        android:layout_marginTop="@dimen/margin_normal"
        android:hint="任务内容"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"/>

</RelativeLayout>
