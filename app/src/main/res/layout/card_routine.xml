<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/routine_setting_card_title"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/share"
        android:background="@color/divider"/>

    <RelativeLayout
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/use_24_hour_format"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/settings_hour_format"
            style="@style/switchStyle"
            android:background="@null"
            android:checked="true"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/share"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/browser_setting"
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/sunday_first"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/settings_sunday_first"
            style="@style/switchStyle"
            android:background="@null"
            android:checked="true"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/diy_ocr_key"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/settings_start_weekly_at_holder"
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.simplemobiletools.commons.views.MyTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/start_day_at"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/settings_start_weekly_at"
            style="@style/switchStyle"
            android:text="06:00"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/donate"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/settings_end_weekly_at_holder"
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.simplemobiletools.commons.views.MyTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/end_day_at"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/settings_end_weekly_at"
            style="@style/switchStyle"
            android:text="24:00"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/donate"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/settings_pre_filled_weeks_holder"
        style="@style/cardViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.simplemobiletools.commons.views.MyTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/pre_filled_weeks"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/settings_pre_filled_weeks"
            style="@style/switchStyle"
            android:background="@null"
            android:text="1"/>

    </RelativeLayout>
</LinearLayout>