<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_background"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/dialog_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@mipmap/wan_fu_yong_inappropriate"/>

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/achievement_dialog_twenty_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/word_test"
        android:textColor="@color/statistical_text_color"
        android:textSize="@dimen/text_title_size"/>

    <TextView
        android:id="@+id/dialog_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/word_test"
        android:textColor="@color/achievement_title_color"
        android:textSize="@dimen/text_small_size"/>

    <RelativeLayout
        android:id="@+id/share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/share_btn_margin"
        android:visibility="gone"
        android:layout_marginRight="@dimen/share_btn_margin"
        android:background="@drawable/primary_color_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal_size"/>
    </RelativeLayout>
</LinearLayout>