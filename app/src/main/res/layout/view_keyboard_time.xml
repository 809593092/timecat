<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/dialog_add_task_select_ll_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/select_ll_start"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:text="开始时间"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/select_tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:15"
                    android:textColor="@color/black"
                    android:textSize="28sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/select_tv_all_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingVertical="3dp"
                android:text="全天"
                android:textColor="@color/red"/>

            <LinearLayout
                android:id="@+id/select_ll_end"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:text="结束时间"
                    android:textColor="#3e000000"/>

                <TextView
                    android:id="@+id/select_tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:15"
                    android:textColor="#3e000000"
                    android:textSize="28sp"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/time_picker_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</merge>